@model IEnumerable<ResortManagerSoftware.Models.Service>
@using ResortManagerSoftware.Models
@using System.Linq
@{
    ViewBag.Title = "Home Page";
}



<div class="row">
    <div class=" row">
        @foreach (var item in Model)
        {
        <div class="col-sm-3" style="background-color:lavender; margin-top:5px;text-align:center;">
            <h3>@Html.DisplayFor(modelItem => item.TenSp)</h3>
            @Html.Image("../" + item.HinhSp, "alt", "100")<br />
            @Html.DisplayFor(modelItem => item.Dongia) <br />
            <a class="btn btn-infor btn-sm" href="@Url.Action("Detail", "Rooms", new{ id = item.Idroom })">
                Xem chi tiet
            </a>
        </div>
        }
    </div>
</div>